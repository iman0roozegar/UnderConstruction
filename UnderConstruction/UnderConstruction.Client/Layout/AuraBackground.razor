    <div class="blob w-[220px] h-[220px] bg-blue-400 rounded-full blur-[110px] mix-blend-screen"></div>
    <div class="blob w-[240px] h-[240px] bg-blue-600 rounded-full blur-[120px] mix-blend-screen"></div>
    <div class="blob w-[210px] h-[210px] bg-indigo-500 rounded-full blur-[105px] mix-blend-screen"></div>
    <div class="blob w-[230px] h-[230px] bg-purple-500 rounded-full blur-[115px] mix-blend-screen"></div>
    <div class="blob w-[250px] h-[250px] bg-pink-400 rounded-full blur-[125px] mix-blend-screen"></div>
    <div class="blob w-[220px] h-[220px] bg-red-400 rounded-full blur-[110px] mix-blend-screen"></div>
    <div class="blob w-[240px] h-[240px] bg-red-600 rounded-full blur-[120px] mix-blend-screen"></div>
    <div class="blob w-[210px] h-[210px] bg-teal-400 rounded-full blur-[105px] mix-blend-screen"></div>
    <div class="blob w-[230px] h-[230px] bg-emerald-500 rounded-full blur-[115px] mix-blend-screen"></div>
    <div class="blob w-[200px] h-[200px] bg-sky-500 rounded-full blur-[100px] mix-blend-screen"></div>
    <div class="blob w-[250px] h-[250px] bg-rose-400 rounded-full blur-[125px] mix-blend-screen"></div>
    <div class="blob w-[220px] h-[220px] bg-fuchsia-500 rounded-full blur-[110px] mix-blend-screen"></div>
    <div class="blob w-[240px] h-[240px] bg-orange-400 rounded-full blur-[120px] mix-blend-screen"></div>
    <div class="blob w-[210px] h-[210px] bg-lime-400 rounded-full blur-[105px] mix-blend-screen"></div>
    <div class="blob w-[230px] h-[230px] bg-violet-600 rounded-full blur-[115px] mix-blend-screen"></div>
    <div class="blob w-[250px] h-[250px] bg-cyan-500 rounded-full blur-[125px] mix-blend-screen"></div>
    <div class="blob w-[200px] h-[200px] bg-pink-500 rounded-full blur-[100px] mix-blend-screen"></div>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("initBlobs");
        }
    }
}
